<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	
	<item
		android:top="-2dp"
		android:bottom="-2dp"
		android:left="0dp"
		android:right="-2dp" >
		
		<!--선의 형태-->
		<shape
			android:shape="rectangle" >
			
			<!--테두리 선 두께와 색상 설정-->
			<stroke
				android:width="1dp"
				android:color="@android:color/darker_gray" />
			
			<!--테두리 내부 채울 색상 설정-->
			<solid android:color="#FFF" />
		</shape>
	</item>

</layer-list>
