<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".SalesHistoryList_Activity">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="75dp">
		
		<ImageButton
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@android:color/transparent"
			android:scaleType="fitXY"
			app:srcCompat="@drawable/baseline_arrow_back_36"
			android:id="@+id/ib_back"
			app:layout_constraintHorizontal_bias="0.1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
		<TextView
			android:text="판매 상품 보기"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_SalesHistoryList"
			app:layout_constraintHorizontal_bias="0.1"
			android:textColor="@color/black"
			android:textSize="20sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toEndOf="@+id/ib_back"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp">
		<TextView
			android:text="전체"
			android:textSize="17sp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:id="@+id/tv_all"
			android:layout_weight="1"/>
		<TextView
			android:text="판매중"
			android:textSize="17sp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:id="@+id/tv_sale"
			android:layout_weight="1"/>
		<TextView
			android:text="거래완료"
			android:textSize="17sp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:id="@+id/tv_SaleCompleted"
			android:layout_weight="1"/>
	</LinearLayout>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:id="@+id/srl_SalesHistoryList"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintVertical_bias="0.0">
			
			<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/rv_SalesHistoryList">
			</androidx.recyclerview.widget.RecyclerView>
		
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/progressBar"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="@+id/srl_SalesHistoryList"/>
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>